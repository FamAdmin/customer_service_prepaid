<div id="notifications"></div>

<% if flash[:confirmation] %>
  <% if flash[:action] == "size_update" %>
    <div class="update-confirmation-wrapper">
      <p>The order sizes have been updated!</p>
      <div class="update-confirmation-inner-wrapper">

        <ul>
          <li>Tops: <span><%= flash[:confirmation]['tops'] %></span></li>
          <li>Leggings: <span><%= flash[:confirmation]['leggings'] %></span></li>
          <li>Sports Bra: <span><%= flash[:confirmation]['sports-bra'] %></span></li>
          <li>Gloves: <span><%= flash[:confirmation]['gloves'] %></span></li>
        </ul>
      </div>
    </div>
  <% elsif flash[:action] == "line_item" %>
    <div class="update-confirmation-wrapper">
      <p>The order has been switched!</p>
      <div class="update-confirmation-inner-wrapper">

        <ul>
          <li>New Product Collection: <span><%= flash[:confirmation]['product_collection'] %></span></li>
        </ul>
      </div>
    </div>
<% end %>
<% end %>
<table class="table order-show-wrapper">
  <thead>
    <tr>
      <th>Order #</th>
      <th>Date</th>
      <th>Total</th>
      <th>Transaction Status</th>
      <th>Line_Items</th>
      <th colspan="6"></th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td><%= @order.id %></td>
      <td><%= @order.scheduled_at.strftime('%B %d, %Y') %></td>
      <td><%= number_to_currency(@order.total_price) %></td>
      <td><%= @order.status %></td>
      <td>
        <% @order.line_items.each do |line_item| %>
          <% if line_item.has_key?('images') %>
            <img src="<%= @order.line_items[0]['images']['small'] %>"/>
          <% end %>
          <%= @order.line_items[0]['title'] %> <br />
          Quantity: <%= line_item['quantity'] %> <br />
            <% line_item['properties'].each do |prop| %>
              <% if prop.has_value?('leggings') %>
                Leggings: <%= prop['value'] %><br />
              <% end %>
              <% if prop.has_value?('sports-bra') %>
                Sports Bra: <%= prop['value'] %><br />
              <% end %>
              <% if prop.has_value?('tops') %>
                Tops: <%= prop['value'] %><br />
              <% end %>
              <% if prop.has_value?('product_collection') %>
                Product Collection: <%= prop['value'] %><br />
              <% end %>
            <% end %>
        <% end %>
        <%= link_to "Edit line items", edit_customer_order_path(@order) %>
        <%= link_to "Edit sizes", edit_customer_order_sizes_path(@order) %>
      </td>
    </tr>
  </tbody>
</table>
